#!/bin/sh

awk '
/^MemTotal:/ {
	mem_total=$2
}
/^MemFree:/ {
	mem_free=$2
}
/^Buffers:/ {
	mem_free+=$2
}
/^Cached:/ {
	mem_free+=$2
}
/^SwapTotal:/ {
	swap_total=$2
}
/^SwapFree:/ {
	swap_free=$2
}
END {
	# full text
		printf("MEM: %.1fG   ", mem_free/1024/1024)
		printf("SWP: %.1fG\n", (swap_free)/1024/1024)

	# TODO: short text

	# TODO: color (if less than X%)
}
' /proc/meminfo
