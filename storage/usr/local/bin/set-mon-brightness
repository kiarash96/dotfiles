#!/bin/sh

DEVICE=/sys/class/backlight/intel_backlight
curr=$(cat $DEVICE/brightness)
max=$(cat $DEVICE/max_brightness)
min=40
step=$((max/80))

if [ $1 = '+' ]; then
	next=$((curr+step))
	echo $(( next > max ? max : next )) > $DEVICE/brightness
elif [ $1 = '-' ]; then
	next=$((curr-step))
	echo $(( next < min ? min : next )) > $DEVICE/brightness
fi
